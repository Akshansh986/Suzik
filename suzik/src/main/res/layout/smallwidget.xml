<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smallwidgetlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#bf009688"
    >

    <ImageView
        android:id="@+id/notification_small_albumart"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"



        android:scaleType="centerCrop"

        android:src="@drawable/album_art" />

    <TextView
        android:id="@+id/notification_small_songtitle"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/notification_small_albumart"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
        style="@style/NotificationTitle"

 />

    <TextView
        android:id="@+id/notifiacation_small_artist"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_below="@+id/notification_small_songtitle"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/notification_small_albumart"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
                style="@style/NotificationText"

 />

