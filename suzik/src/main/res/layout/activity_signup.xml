<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:src="@drawable/photo"
        />  <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"

    android:id="@+id/gloss"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:id="@+id/RelativeLayout1">
             <TextView
            android:id="@+id/act_songs_list_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:textSize="35sp"
            android:text="Social Music"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/signup_button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:onClick="buttonSubmit"
            android:text="Submit" />

        <EditText
            android:id="@+id/signup_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/act_songs_list_song_name"
            android:layout_marginTop="39dp"
            android:layout_toRightOf="@+id/textView1"
            android:ems="10"
            android:hint="Enter your number"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/signup_number"
            android:layout_alignBottom="@+id/signup_number"
            android:layout_alignLeft="@+id/signup_button_submit"
            android:text="+91"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/loginicon"/>


        <!--<ProgressBar-->
        <!--style="?android:attr/progressBarStyleLarge"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/progressBar2"-->
        <!--android:progressDrawable="@drawable/progress_bar_color"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_centerHorizontal="true" />-->


    </RelativeLayout>

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_below="@+id/RelativeLayout1"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>




</RelativeLayout>
