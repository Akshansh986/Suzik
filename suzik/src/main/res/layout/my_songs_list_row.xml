<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        >

        <RelativeLayout
            android:id="@+id/rll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/inapp_image"
                android:layout_width="@dimen/album_art_thumbnail_size"
                android:layout_height="@dimen/album_art_thumbnail_size"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:src="@drawable/album_art" >
            </ImageView>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/inapp_image"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/inapp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ik Onkar"
                    android:textSize="15dp"

                    />

                <TextView
                    android:id="@+id/inapp_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A.R. Rahman"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#B0B0B0" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>