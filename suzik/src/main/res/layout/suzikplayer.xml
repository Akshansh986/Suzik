<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:id="@+id/albumart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/album_art" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.suzikmusicplayer.MainActivity">

        <RelativeLayout
            android:id="@+id/playerbuttonpannelsmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:id="@+id/previoussmall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/playpausesmall"
                android:alpha="0.60"
                android:src="@drawable/previous" />

            <ImageView
                android:id="@+id/playpausesmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:alpha="0.60"
                android:clickable="true"
                android:src="@drawable/play" />

            <ImageView
                android:id="@+id/nextsmall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/playpausesmall"
                android:alpha="0.60"
                android:src="@drawable/next" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView23"
                android:layout_alignTop="@+id/previoussmall"
                android:layout_toLeftOf="@+id/nextsmall"
                android:layout_toStartOf="@+id/nextsmall" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/Infopanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/songname"
                style="@style/AudioFileInfoOverlayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text=""
                android:textSize="20sp" />

            <TextView
                android:id="@+id/albumname"
                style="@style/AudioFileInfoOverlayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text=""
                android:textSize="17sp" />

            <TextView
                android:id="@+id/artistname"
                style="@style/AudioFileInfoOverlayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text=""
                android:textSize="15sp"

                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/playerbuttonpannel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/previous"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/playpause"
                android:alpha="0.60"
                android:src="@drawable/previous" />

            <ImageView
                android:id="@+id/playpause"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:alpha="0.60"
                android:clickable="true"
                android:src="@drawable/play" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/playpause"
                android:alpha="0.60"
                android:src="@drawable/next" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_alignTop="@+id/previous"
                android:layout_toLeftOf="@+id/next"
                android:layout_toStartOf="@+id/next" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buttonpannel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seekbar">


            <ImageView
                android:id="@+id/repeat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:alpha="0.60"

                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/repeat" />

            <ImageView
                android:id="@+id/shuffle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:alpha="0.60"
                android:layout_alignParentTop="true"
                android:layout_marginRight="30dp"
                android:src="@drawable/shuffle" />
        </RelativeLayout>

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_above="@+id/Infopanel" />


    </RelativeLayout>


</FrameLayout>