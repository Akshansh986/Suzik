<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp" >

    <TextView
        android:id="@+id/act_songs_list_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="Social Music"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/signup_button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:onClick="buttonSubmit"
        android:text="Submit" />

    <EditText
        android:id="@+id/signup_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/act_songs_list_song_name"
        android:layout_marginTop="39dp"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:hint="Enter your number"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/signup_number"
        android:layout_alignBottom="@+id/signup_number"
        android:layout_alignLeft="@+id/signup_button_submit"
        android:text="+91"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
